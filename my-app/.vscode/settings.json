{
  "css.validate": false,
  "scss.validate": false,
  "less.validate": false,
  "stylelint.validate": ["css", "postcss"],
  "files.associations": {
    "*.css": "css"
  },
  "editor.quickSuggestions": {
    "strings": true
  },
  "editor.formatOnSave": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "css.lint.unknownAtRules": "ignore",
  "css.lint.validProperties": [
    "composes",
    "@apply",
    "@tailwind",
    "@layer"
  ]
} 